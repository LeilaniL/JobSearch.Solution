@using JobSearch.Models
@{
  Layout = "_Layout";
}
<div class="container">
  <ul class="nav nav-tabs nav-justified">
    <li><a class="nav-link" href = "/jobs/all">All</a></li>
    <li><a class="nav-link" href = "/jobs/stackoverflow"><img class="logoAll" src="~/img/stackoverflow.png"></a></li>
    <li><a class="nav-link" href = "/jobs/indeed"><img class="logoAll" src="~/img/indeed.png"></a></li>
    <li><a class="nav-link" href = "/jobs/glassdoor"><img class="logoAll" src="~/img/glassdoor.png"></a></li>
    <li><a class="nav-link" href = "/jobs/craigslist"><img class="logoAll" src="~/img/craigslist.png"></a></li>
    <li><a class="nav-link" href = "/jobs/monster"><img class="logoAll" src="~/img/monsterlogo.png"></a></li>
  </ul>
</div>
<br>
<img class="logo" src="~/img/indeed.png">
<br>
<div class="wrapper">
  <div id="formLeft" class="formClass">
    <p>Search Indeed By Job TItle and Job Location</p>
    <form action = "/jobs/indeed" method="post">
            <i class="fas fa-search"></i>
            <input name='jobName' placeholder="Job Title" type='text' required>
            <i class="fas fa-map-marker-alt"></i>
            <input name='jobLocation' placeholder="Job Location"type='text' required>
            <button class="btn" type='submit'>Find a job</button>
    </form>
  </div>
  <div class="formClass">
    <p class="jobOutput">Indeed Results:</p>
    <ul class= "indeed">

 
   @if(@Model.Count >0)
    {
      @for(int i=0; i< @Model.Count; i++) 
      {  
          <a target="_blank" class="exportLink"  href="@Model[i].GetUrl()"><h4 class="underlined underlined--gradient"> <b>@Model[i].GetTitle()&nbsp;&nbsp;</b> </h4> </a> 
      <button class="collapsible btn btn-sm">Details</button>
        <div class="content">
        <h4 class="details">@Model[i].GetTitle()&nbsp; (@Model[i].GetCompany())</h4>
          <p>@Model[i].GetDescription()</p>
        </div>
      }
    
    }
    </ul>
  </div>
</div>