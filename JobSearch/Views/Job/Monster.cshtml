@using JobSearch.Models
@{
  Layout = "_Layout";
}
<div class="container">
  <ul class="nav nav-tabs nav-justified">
    <li><a class="nav-link" href = "/jobs/all">All</a></li>
    <li><a class="nav-link" href = "/jobs/stackoverflow">Stack OverFlow</a></li>
    <li><a class="nav-link" href = "/jobs/indeed">Indeed</a></li>
    <li><a class="nav-link" href = "/jobs/glassdoor">GlassDoor</a></li>
    <li><a class="nav-link" href = "/jobs/craigslist">Craigslist</a></li>
    <li><a class="nav-link" href = "/jobs/monster">Monster</a></li>
  </ul>
</div>
<br>
<img class="logo" src="~/img/monsterlogo.png">
<br>
<div class="wrapper">
  <div id="formLeft" class="formClass">
    <p>Search Monster By Job Title and Job Location</p>
    <form action = "/jobs/monster" method="post">
            <label for='jobName'>Job Title</label>
            <input class='jobName' name='jobName' type='text' required>
            <label for='jobLocation'>Job Location</label>
            <input class='jobLocation' name='jobLocation' type='text' required>
            <button type='submit'>Find a job</button>
    </form>
  </div>
  <div class="formClass">
    <p class="jobOutput">Monster Results:</p>
     <ul>
    @if(@Model.Count != 0)
    {
      @foreach(MonsterClass job in @Model)
        {
          <a href="@job.GetUrl()"><p class="underlined underlined--gradient">@job.GetTitle() <i>@job.GetCompany()</i>, <small>@job.GetLocation(), @job.GetDate()</small> </p></a>
        }
    } else
    {
      <p> </p>
    }
    </ul>
  </div>
</div>